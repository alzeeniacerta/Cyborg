{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Cucumber Debug",
      "smartStep": true,
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "runtimeExecutable": "npm",
      //Put the tag below to debug a particular scenario
      "runtimeArgs": [
        "run",
        "test",
        "--ENV=STAGING",
        "--BROWSER=chrome",
        "--HEADLESS=false",
        "--TAGS=@dashboard1"
      ],
      "outFiles": [
        "${workspaceFolder}/**/*.ts"
      ]
    }
  ]
}